	"license": "MIT",
	"keywords": ["documentation", "summary", "notion", "traditional-chinese", "ai-documents"],
	"commands": ["./commands/doc-summary.md"],
	"mcpServers": {
		"notionApi": {
			"command": "npx",
			"args": ["-y", "@notionhq/notion-mcp-server"],
